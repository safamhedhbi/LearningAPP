<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plan2"
    android:padding="16dp"
    tools:context="com.example.safam.myapplication.Examen">


    <TextView
        android:id="@+id/text_view_question_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/text_view_countdown"
        android:layout_marginTop="14dp"
        android:text="Question: 1/x"
        android:textColor="@color/color1"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="00:30"
        android:textColor="@color/textColor"
        android:textSize="40sp"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/text_view_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/radio_group"
        android:layout_marginBottom="20dp"
        android:text="Here will be the question text\nHere will be the question text\nHere will be the question text"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"

        >

        <RadioButton
            android:id="@+id/radio_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 1"
            android:textSize="17sp"
            android:textColor="@color/textColor"/>

        <RadioButton
            android:id="@+id/radio_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 2"
            android:textSize="17sp"
            android:textColor="@color/textColor"/>

        <RadioButton
            android:id="@+id/radio_button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 3"
            android:textColor="@color/textColor"
            android:textSize="17sp"/>

    </RadioGroup>

    <Button
        android:id="@+id/next"
        android:layout_width="100dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/radio_group"
        android:layout_marginTop="62dp"
        android:layout_toEndOf="@+id/q6"
        android:layout_toRightOf="@+id/q6"
        android:background="@drawable/custom_button"
        android:foreground="?attr/selectableItemBackground"
        android:text="Next"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/modifier"
        android:layout_width="100dp"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/next"
        android:layout_alignBottom="@+id/next"
        android:layout_alignEnd="@+id/text_view_question_count"
        android:layout_alignRight="@+id/text_view_question_count"
        android:background="@drawable/custom_button"
        android:foreground="?attr/selectableItemBackground"
        android:text="Précédente"
        android:textColor="#fff"
        android:textSize="13sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/q1"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="1" />

    <Button
        android:id="@+id/q2"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/q1"
        android:layout_toRightOf="@+id/q1"
        android:text="2" />

    <Button
        android:id="@+id/q3"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/q2"
        android:layout_toRightOf="@+id/q2"
        android:text="3" />

    <Button
        android:id="@+id/q4"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/q3"
        android:layout_toRightOf="@+id/q3"
        android:text="4" />

    <Button
        android:id="@+id/q5"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/q4"
        android:layout_toRightOf="@+id/q4"
        android:text="5" />

    <Button
        android:id="@+id/q6"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/q5"
        android:layout_toRightOf="@+id/q5"
        android:text="6" />

    <Button
        android:id="@+id/q7"
        android:layout_width="35dp"
        android:layout_height="40dp"

        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/q6"
        android:layout_toRightOf="@+id/q6"
        android:text="7" />

    <Button
        android:id="@+id/q8"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/q7"
        android:layout_toRightOf="@+id/q7"
        android:text="8" />

    <Button
        android:id="@+id/q9"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/q8"
        android:layout_toRightOf="@+id/q8"
        android:text="9" />

</RelativeLayout>
